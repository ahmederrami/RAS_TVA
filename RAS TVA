@startuml
title Retenue A la Source (RAS) sur TVA
skinparam {
    defaultFontColor black
    defaultFontSize 14
    defaultTextAlignment center
    rectangle {
        BackgroundColor White
        FontColor Black
        BorderColor Black
    }
}

start

if (type d'opération objet de la facture ?) then (Travaux / Equipement)
  if (Attestation de régularité conforme ?) then (Oui)
    :<back:lightgreen>Pas de RAS sur TVA;
    stop
  else (Non)
    :<back:lightcoral>RAS 100% sur TVA;
    stop
  endif
else (Prestation)
  if (montant facture < 5000 dh et total\n fournisseur du mois < 50000 dh?) then (Oui)
    :<back:lightgreen>Pas de RAS sur TVA;
    stop
  else (Non)
    if (Prestation soumise à la RAS sur TVA ?) then (Oui)
      goto decision_attestation
    else (Non)
      :<back:lightgreen>Pas de RAS sur TVA;
      stop
    endif
  endif
endif

label decision_attestation
if (Attestation de régularité conforme ?) then (Oui)
  :<back:lightyellow>RAS 75% sur TVA;
else (Non)
  :<back:lightcoral>RAS 100% sur TVA;
endif
stop

@enduml
